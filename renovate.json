{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "includeForks": true,
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "description": "Group updates into single PR",
      "matchFileNames": [".github/workflows/talos-boot-assets.yaml"],
      "groupName": "Talos boot assets"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/siderolabs/intel-ucode",
        "ghcr.io/siderolabs/i915-ucode",
        "ghcr.io/siderolabs/amd-ucode",
        "ghcr.io/siderolabs/amdgpu-firmware",
        "ghcr.io/siderolabs/drbd",
        "ghcr.io/siderolabs/tailscale",
        "ghcr.io/siderolabs/iscsi-tools",
        "ghcr.io/siderolabs/thunderbolt"
      ],
      "versioning": "loose"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.github/workflows/.+\\.ya?ml$"],
      "matchStrings": [
        "#\\s?renovate: ?\\s+depName=(?<depName>.+?)?\\s(?:.*_(?:version|VERSION):\\s+(?<currentValue>.*))"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
